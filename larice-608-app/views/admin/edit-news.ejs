<!-- views/admin/edit-news.ejs -->

<h2>Edit News Post</h2>

<form action="/news/edit/<%= newsItem.id %>" method="POST" class="register-form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= newsItem.title %>" required>
  </div>
  <div class="form-group">
    <label for="category">Category</label>
    <select id="category" name="category" required>
      <% const categories = ['General', 'Research', 'Event', 'Other']; %>
      <% categories.forEach(cat => { %>
        <option value="<%= cat %>" <%= newsItem.category === cat ? 'selected' : '' %>>
          <%= cat %>
        </option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea id="content" name="content" rows="10" required><%= newsItem.content %></textarea>
  </div>
  <button type="submit">Update Post</button>
</form>